<form action="/customer/update/<%= customer.id %>" method="POST">
  <h2>Create a Customer</h2>
  <input value="<%= customer.name %>" type="text"  name="name" id="name"><br/>
  <input value="<%= customer.email %>" type="text" name="email" id="email"><br/>
  <input value="<%= customer.state %>" type="text"  name="state" id="state"><br/>
  <input type="submit" value="Edit Customer"/>
</form>